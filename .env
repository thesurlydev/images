# Global environment variables that are used in the docker-compose.yml file AND imported in the Spring Boot apps.

POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=shane
POSTGRES_PASSWORD=shane
POSTGRES_DB=images

# Uncomment one of the following lines to choose the storage implementation.
SPRING_PROFILES_ACTIVE=dev,storage-local
#SPRING_PROFILES_ACTIVE=dev,storage-s3

# Note that in order to support SVG images, we need to use something like Apache Batik since Java doesn't natively support SVG.
# Call ImageIO.getWriterFormatNames() to see the list of supported formats.
IMAGES_ALLOWED_MIME_TYPES=image/jpg,image/jpeg,image/png,image/gif

STORAGE_PATH=/tmp/image-uploads

MESSAGING_SERVER_URL=nats://localhost:4222
MESSAGING_TRANSFORM_SUBJECT=image-transform
